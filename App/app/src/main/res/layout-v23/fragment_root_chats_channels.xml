<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_chats_channels"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_chats_channels_height"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/tab_chats_channels_hor_margin"
        app:tabTextColor="@color/white"
        app:tabIconTint="@color/white"
        app:tabSelectedTextColor="@color/shadow"
        app:tabTextAppearance="@style/ChatsChannelsTab"
        app:tabIndicator="@drawable/tab_chats_channels"
        app:tabIndicatorColor="@color/white"
        app:tabUnboundedRipple="true"
        app:tabMode="fixed"
        android:background="@drawable/tab_chats_channels_background"
        app:tabBackground="@drawable/tab_chats_channels_background"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/shadow_chats_channels"
        android:layout_below="@id/tab_layout_chats_channels"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:rotation="180"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_shadow"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_chats_channels"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/shadow_chats_channels"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chats_channels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/tab_chats_channels_hor_margin"
        android:layout_marginBottom="20dp"
        android:tint="@color/white"
        app:backgroundTint="@color/red"
        app:borderWidth="0dp"
        android:src="@drawable/ic_plus"
        app:fabSize="normal"
        android:scaleType="center"
        app:maxImageSize="50dp"
        app:elevation="0dp" />

</RelativeLayout>