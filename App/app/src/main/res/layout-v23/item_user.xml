<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.alexz.messenger.app.ui.views.AvatarImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginTop="3dp"
            android:layout_marginStart="@dimen/tab_chats_channels_hor_margin"
            android:layout_marginBottom="3dp"
            android:layout_marginVertical="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true"/>

        <View
            android:id="@+id/user_online_indicator"
            android:layout_width="@dimen/dialog_online_indicator_size"
            android:layout_height="@dimen/dialog_online_indicator_size"
            android:background="@drawable/drawable_oval"
            android:layout_alignEnd="@id/user_avatar"
            tools:visibility="visible"
            android:layout_alignBottom="@id/user_avatar"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            android:backgroundTint="@color/blue"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_avatar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/tab_chats_channels_hor_margin"
            android:layout_toEndOf="@id/user_avatar"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big"
            android:ellipsize="end"
            tools:text="Name" />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/user_online"
            android:layout_below="@id/user_name"
            android:layout_alignStart="@id/user_name"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:layout_marginEnd="@dimen/tab_chats_channels_hor_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_medium"
            tools:text="+375292195395" />

        <TextView
            android:id="@+id/user_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Online"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:layout_marginEnd="@dimen/tab_chats_channels_hor_margin"
            android:textSize="@dimen/font_size_small"
            android:layout_alignStart="@id/user_name"
            android:ellipsize="end"
            android:layout_alignBottom="@id/user_avatar"
            android:layout_alignParentEnd="true"/>






</RelativeLayout>
