<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <CheckBox
            android:id="@+id/cb_selected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:buttonTint="@color/blue"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginStart="@dimen/tab_viewpager_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.community.features.avatarimageview.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginTop="3dp"
            android:layout_marginStart="@dimen/tab_viewpager_horizontal_margin"
            android:layout_marginBottom="3dp"
            android:layout_marginVertical="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cb_selected"
            android:src="@drawable/logo"
            />

        <View
            android:id="@+id/v_online_indicator"
            android:layout_width="@dimen/dialog_online_indicator_size"
            android:layout_height="@dimen/dialog_online_indicator_size"
            android:background="@drawable/drawable_oval"
            app:layout_constraintEnd_toEndOf="@id/iv_avatar"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            android:layout_alignBottom="@id/iv_avatar"
            tools:visibility="visible"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            android:backgroundTint="@color/blue"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/tab_viewpager_horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/iv_avatar"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constrainedWidth="true"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big"
            android:ellipsize="end"
            tools:text="Name" />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_online"
            android:layout_below="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintBottom_toTopOf="@id/tv_online"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constrainedWidth="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="3dp"
            android:layout_marginEnd="@dimen/tab_viewpager_horizontal_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_medium"
            tools:text="+375292195395" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Online"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:layout_marginEnd="@dimen/tab_viewpager_horizontal_margin"
            android:textSize="@dimen/font_size_small"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/user_phone"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            />






</androidx.constraintlayout.widget.ConstraintLayout>
