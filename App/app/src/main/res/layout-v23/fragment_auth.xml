<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view"
    android:background="@color/app_back"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:transitionName="@string/transition_logo"
            android:layout_width="@dimen/reg_logo_size"
            android:layout_height="@dimen/reg_logo_size"
            android:layout_marginTop="@dimen/register_logo_top_margin"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginVertical="60dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="20dp"
            app:tabBackground="@drawable/tab_background"
            app:tabMode="fixed"
            app:tabIndicator="@drawable/tab_indicator_circle"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/layout_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_info"
            android:layout_alignStart="@id/btn_send_code"
            android:layout_alignEnd="@id/btn_send_code">

            <com.hbb20.CountryCodePicker
                android:id="@+id/country_code_picker"
                android:paddingStart="5dp"
                android:paddingVertical="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ccp"
                app:ccpDialog_backgroundColor="@color/black"
                app:ccpDialog_textColor="@color/white"
                app:ccp_textSize="@dimen/main_text_size"
                app:ccp_showFullName="false"
                app:ccpDialog_keyboardAutoPopup="false"
                app:ccp_contentColor="@color/white"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true"
                app:ccp_autoDetectCountry="true" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/country_code_picker"
                android:layout_alignTop="@id/country_code_picker"
                android:layout_alignBottom="@id/country_code_picker"
                android:background="@drawable/background_phone"
                android:hint="@string/phone"
                android:paddingHorizontal="1dp"
                android:autofillHints="phoneNational"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/main_text_size" />

            </RelativeLayout>

        <EditText
            android:id="@+id/edit_code"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@+id/btn_send_code"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/btn_send_code"
            android:layout_alignEnd="@id/btn_send_code"
            android:background="@drawable/background_input"
            android:hint="@string/code"
            android:drawableStart="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray"
            android:paddingHorizontal="10dp"
            android:maxLength="@integer/verification_code_size"
            android:importantForAutofill="no"
            android:layout_alignTop="@id/layout_phone"
            android:inputType="number"
            android:visibility="visible"
            android:translationX="@dimen/auth_edits_translation"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/main_text_size" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_send_code"
            android:layout_alignEnd="@id/btn_send_code"
            android:layout_alignTop="@id/layout_phone"
            android:translationX="4dp"
            android:indeterminateTint="@color/white"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_send_code"
            android:transitionName="@string/transition_btn_signin"
            android:layout_marginTop="10dp"
            android:layout_below="@id/layout_phone"
            android:layout_centerHorizontal="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/background_login_btn"
            android:layout_width="@dimen/default_control_width"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:enabled="false"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_big"
            android:text="@string/send_code"/>

        <LinearLayout
            android:id="@+id/layout_resend"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_send_code"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/default_bottom_margin"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_resend_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="@dimen/font_size_small"
                android:text="@string/didnt_get_code"/>
            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gotham_pro_bold"
                android:textColor="@color/blue"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="@dimen/font_size_small"
                android:text="@string/resend" />
        </LinearLayout>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>