<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/logo"
        android:transitionName="@string/transition_logo"
        android:layout_width="@dimen/reg_logo_size"
        android:layout_height="@dimen/reg_logo_size"
        android:layout_above="@id/_info_layout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/_info_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/name">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/register_view_pager"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/register_tab_layout"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="20dp"
        app:tabBackground="@drawable/tab_background"
        app:tabMode="fixed"
        app:tabIndicator="@drawable/tab_indicator_circle"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

