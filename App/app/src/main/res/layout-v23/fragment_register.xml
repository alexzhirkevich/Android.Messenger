    <EditText
        android:id="@+id/name"
        android:layout_marginVertical="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_input"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/gotham_pro_light"
        android:hint="@string/your_name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/main_text_size" />

    <EditText
        android:id="@+id/email"
        android:layout_marginVertical="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_input"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/gotham_pro_light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/main_text_size" />

    <EditText
        android:id="@+id/password"
        android:layout_marginVertical="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/_layout_rules"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_input"
        android:drawableStart="@drawable/ic_pass"
        android:drawablePadding="10dp"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/gotham_pro_light"
        android:hint="@string/passwd"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/main_text_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/_layout_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/create_account"
        android:layout_centerInParent="true">

        <CheckBox
            android:id="@+id/checkbox_rule"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:buttonTint="@color/gray"
            android:layout_marginHorizontal="5dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/rules_1"
            android:layout_marginEnd="5dp"
            android:text="@string/accept_rules_1"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/gotham_pro_light"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rules_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/gotham_pro"
            android:text="@string/accept_rules_2"
            android:textColor="@color/blue"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/create_account"
        android:transitionName="@string/transition_btn_signin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/background_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:fontFamily="@font/gotham_pro_bold"
        android:paddingHorizontal="30dp"
        android:textSize="17sp"
        android:enabled="false"
        android:text="@string/create_account"
        android:layout_marginHorizontal="15dp"/>



</RelativeLayout>