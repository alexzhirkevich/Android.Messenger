<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/fragment_auth">


    <fragment
        android:id="@+id/fragment_auth"
        android:name="com.alexz.messenger.app.ui.fragments.AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_auth_to_bottom_navigation"
            app:destination="@id/fragment_bottom_navigation"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_bottom_navigation"
        android:name="com.alexz.messenger.app.ui.fragments.BottomNavigationFragment"
        tools:layout="@layout/fragment_bottom_navigation">
    </fragment>

</navigation>