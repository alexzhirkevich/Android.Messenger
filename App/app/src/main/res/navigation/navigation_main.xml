<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.alexz.test.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/fragment_register" />
        <action
            android:id="@+id/action_login_to_bottom_navigation"
            app:destination="@id/fragment_bottom_navigation"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_register"
        android:name="com.alexz.test.RegisterFragment"
        tools:layout="@layout/fragment_register">
    </fragment>

    <fragment
        android:id="@+id/fragment_bottom_navigation"
        android:name="com.alexz.test.BottomNavigationFragment"
        tools:layout="@layout/fragment_bottom_navigation">
    </fragment>

</navigation>