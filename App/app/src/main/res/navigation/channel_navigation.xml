<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channel_navigation"
    app:startDestination="@id/fragment_posts">

    <fragment
        android:id="@+id/fragment_posts"
        android:name="com.alexz.messenger.app.ui.fragments.ChannelPostsFragment"
        tools:layout="@layout/fragment_channel_posts">
        <action
            android:id="@+id/action_posts_to_create"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:destination="@id/fragment_post_create"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_post_create"
        android:name="com.alexz.messenger.app.ui.fragments.ChannelPostCreationFragment"
        tools:layout="@layout/fragment_channel_post_creation" >
    </fragment>

</navigation>