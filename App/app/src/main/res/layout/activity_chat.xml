<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.community.messenger.app.ui.activities.ChatActivity"
    android:background="@drawable/chat_wallp_3">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="true"
            android:scrollbarSize="2dp"
            tools:listitem="@layout/item_message"
            android:scrollbarThumbVertical="@color/gray" />

        <TextView
            android:id="@+id/chatPopupDate"
            android:layout_alignParentTop="true"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="invisible"
            android:background="@drawable/background_message_date" />

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

<!--    <com.community.messenger.app.ui.views.MessageInput-->
<!--        android:id="@+id/message_input"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@color/color_background" />-->

</LinearLayout>