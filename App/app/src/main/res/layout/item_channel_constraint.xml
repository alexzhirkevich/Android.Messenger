
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:background="@android:color/transparent"
    tools:context="com.alexz.messenger.app.data.entities.imp.Group">

    <CheckBox
        android:id="@+id/channel_selector"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:buttonTint="@color/channels"
        android:checked="true"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginStart="@dimen/tab_chats_channels_hor_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.alexz.messenger.app.ui.views.AvatarImageView
        android:id="@+id/channel_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginStart="@dimen/tab_chats_channels_hor_margin"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/logo"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/channel_selector"

        android:layout_centerVertical="true"
        android:layout_marginVertical="7dp"
        android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:scrollHorizontally="true"
            tools:text="Channel name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/gotham_pro_bold"
            app:layout_constraintTop_toTopOf="@id/channel_avatar"
            app:layout_constraintStart_toEndOf="@id/channel_avatar"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/channel_last_post_date"/>


    <TextView
        android:id="@+id/channel_last_post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channel_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:fontFamily="@font/gotham_pro_light"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="@id/channel_avatar"
        app:layout_constraintEnd_toStartOf="@id/channel_last_post_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/channel_name"
        app:layout_constraintTop_toBottomOf="@id/channel_name"
        app:layout_constrainedWidth="true"
        app:layout_constraintVertical_bias="0.5"
        tools:text="Last e dsffsd q gfjdgfd kjgfsdk gsdk sdfk sdfj sdfjk sgfjk gfd fgdfg fdg fg fd fgd fd gfd gfdd sgfdjk sgfjkwe qwe" />

    <TextView
            android:id="@+id/channel_last_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="13:37"
            android:fontFamily="@font/gotham_pro"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_small"
            android:layout_marginEnd="@dimen/tab_chats_channels_hor_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/channel_name" />

        <TextView
            android:id="@+id/channel_unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="3"
            android:background="@drawable/drawable_oval"
            android:backgroundTint="@color/channels"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_medium"
            tools:visibility="visible"
            android:visibility="invisible"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@id/channel_last_post_date"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/channel_last_post_date"
            app:layout_constraintStart_toStartOf="@id/channel_last_post_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>