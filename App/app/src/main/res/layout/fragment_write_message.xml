<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_back"
    tools:context="com.alexz.messenger.app.ui.fragments.WriteMessageFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        style="@style/Toolbar" >

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:id="@+id/shadow_chats_channels"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:rotation="180"
        android:elevation="5dp"
        android:background="@drawable/drawable_shadow"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_user"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbar"/>

    <LinearLayout
        android:id="@+id/layout_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="invisible"
        android:elevation="5dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_emoji_sad" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_error"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:lineSpacingMultiplier="1.3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/error_friends_not_found"
            style="@style/Widget.MaterialComponents.TextView"
            android:textSize="@dimen/font_size_large" />
    </LinearLayout>

</RelativeLayout>