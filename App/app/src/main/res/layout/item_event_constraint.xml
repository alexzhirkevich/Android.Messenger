<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="15dp">



    <ImageView
        android:id="@+id/event_favourite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_star_outline"
        android:background="@android:color/transparent"
        android:layout_marginTop="-5dp"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/favourite" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/app_back"
        android:layout_alignParentTop="true"
        android:elevation="1dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/background_event_ripple">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_ended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Завершено"
            android:visibility="gone"
            android:gravity="center"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"
            android:background="@color/app_back"
            android:elevation="3dp"
            android:alpha="0.7"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Event name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_big" />

        <ImageView
            android:id="@+id/event_date_icon"
            android:layout_width="@dimen/font_size_medium"
            android:layout_height="@dimen/font_size_medium"
            app:layout_constraintTop_toTopOf="@id/event_date"
            app:layout_constraintBottom_toBottomOf="@id/event_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/red" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30.07"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toEndOf="@id/event_date_icon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/red"
            android:fontFamily="@font/gotham_pro"
            android:textSize="@dimen/font_size_medium"/>

        <ImageView
            android:id="@+id/event_time_icon"
            android:layout_width="@dimen/font_size_medium"
            android:layout_height="@dimen/font_size_medium"
            app:layout_constraintTop_toTopOf="@id/event_time"
            app:layout_constraintBottom_toBottomOf="@id/event_time"
            app:layout_constraintStart_toEndOf="@id/event_date"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/blue" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/font_size_medium"
            tools:text="18:00"
            android:gravity="center_vertical"
            android:drawableTint="@color/blue"
            app:layout_constraintTop_toTopOf="@id/event_date"
            app:layout_constraintStart_toEndOf="@id/event_time_icon"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="5dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/gotham_pro"
            android:textSize="@dimen/font_size_medium"/>

        <ImageView
            android:id="@+id/event_address_icon"
            android:layout_width="@dimen/font_size_medium"
            android:layout_height="@dimen/font_size_medium"
            app:layout_constraintTop_toTopOf="@id/event_address"
            app:layout_constraintBottom_toBottomOf="@id/event_address"
            app:layout_constraintStart_toStartOf="@id/event_date_icon"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:src="@drawable/ic_location"
            app:tint="@color/soft_green" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="м-ро Пл.Победы"
            app:layout_constraintTop_toBottomOf="@id/event_date"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="@id/event_date"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/soft_green"
            android:fontFamily="@font/gotham_pro"
            android:textSize="@dimen/font_size_medium"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <ImageButton
            android:id="@+id/event_btn_end"
            android:layout_width="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/btn_event_end"/>

        <ImageButton
            android:id="@+id/event_btn_delete"
            android:layout_width="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/btn_event_delete"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_description_base_top_margin"
        android:layout_below="@+id/event_layout_info"
        android:background="@drawable/background_event"
        android:backgroundTint="@color/dark_dark_gray">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:padding="20dp"
            android:textColor="@color/gray"
            android:maxLength="@integer/event_description_max"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/event_description"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3"
            app:rowCount="1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/event_description">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/event_btn_edit"
                style="@style/MenuButton"
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_pro_bold"
                android:text="@string/edit"
                android:textSize="@dimen/font_size_small"
                android:gravity="center" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/event_btn_share"
                style="@style/MenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:fontFamily="@font/gotham_pro_bold"
                android:textSize="@dimen/font_size_small"
                android:text="@string/share"
                android:gravity="center" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>