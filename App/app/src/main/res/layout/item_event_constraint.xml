<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/tab_viewpager_horizontal_margin"
    android:layout_marginVertical="@dimen/event_vertical_margin"
    android:id="@+id/root">

    <!--    HIDES DESCRIPTION PANEL     -->
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/app_back"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:outlineProvider="none" />

    <androidx.cardview.widget.CardView
        android:id="@+id/event_layout_info_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="@dimen/event_corner_radius"
        app:cardBackgroundColor="@color/dark_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/event_cardview_margin"
        app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:clickable="true"
        android:longClickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/event_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"/>

        <ImageView
            android:id="@+id/event_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_outline"
            android:background="@drawable/background_event_ripple"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/favourite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_name"
            app:layout_constraintBottom_toBottomOf="@id/event_name"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constrainedHeight="true"
            android:padding="1dp"
            android:elevation="5dp"
            android:layout_marginStart="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_ended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Завершено"
            android:visibility="gone"
            android:gravity="center"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"
            android:background="@color/app_back"
            android:alpha="0.7"
            android:elevation="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Event name"
            app:layout_constraintStart_toEndOf="@id/event_favourite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/event_btn_delete"
            app:layout_constrainedWidth="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:background="@drawable/background_event"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintHorizontal_bias="0"
            android:ellipsize="end"
            app:elevation="2dp"
            android:fontFamily="@font/gotham_pro_bold"
            app:layout_constraintVertical_bias="0.5"
            android:textSize="@dimen/font_size_big" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30.07"
            android:background="@drawable/background_event_ripple"
            android:drawableStart="@drawable/ic_calendar"
            android:padding="5dp"
            android:drawablePadding="3dp"
            android:drawableTint="@color/red"
            android:textColor="@color/red"
            android:fontFamily="@font/gotham_pro"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:elevation="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18:00"
                android:drawableStart="@drawable/ic_clock"
                android:gravity="center_vertical"
                android:drawableTint="@color/blue"
                android:drawablePadding="3dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/blue"
                android:fontFamily="@font/gotham_pro"
                android:textSize="@dimen/font_size_small"
                android:background="@drawable/background_event_ripple"
                android:padding="5dp"
                android:elevation="5dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/event_date"
                app:layout_constraintStart_toEndOf="@id/event_date"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="м-ро Пл.Победы"
            android:textColor="@color/green"
            android:fontFamily="@font/gotham_pro"
            android:textSize="@dimen/font_size_small"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/green"
            android:drawablePadding="3dp"
            app:layout_constraintStart_toStartOf="@id/event_date"
            app:layout_constraintTop_toBottomOf="@id/event_date"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:elevation="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_event_ripple"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageButton
            android:id="@+id/event_btn_end"
            android:layout_width="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_percent="0.5"
            android:elevation="2dp"
            android:background="@color/green"/>

        <ImageButton
            android:id="@+id/event_btn_delete"
            android:layout_width="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_percent="0.5"
            android:elevation="2dp"
            android:background="@color/red"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_description_base_top_margin"
        android:layout_below="@+id/event_layout_info_cardview"
        android:background="@drawable/background_event"
        android:backgroundTint="@color/dark_dark_gray"
        android:elevation="3dp"
        android:layout_marginHorizontal="@dimen/event_cardview_margin"
        android:layout_marginBottom="@dimen/event_cardview_margin">

        <com.community.messenger.app.ui.views.AutoLinkTextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:padding="20dp"
            android:textColor="@color/gray"
            android:maxLength="@integer/event_description_len_max"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/event_description_separator"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/event_description"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_btn_edit"
            app:backgroundTint="@color/dark_dark_gray"
            android:background="@drawable/background_event_ripple_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="@font/gotham_pro_bold"
            android:text="@string/edit"
            android:textSize="@dimen/font_size_small"
            android:textAllCaps="false"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/event_description_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constrainedWidth="true"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_btn_share"
            app:backgroundTint="@color/dark_dark_gray"
            android:background="@drawable/background_event_ripple_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="@font/gotham_pro_bold"
            android:textSize="@dimen/font_size_small"
            android:text="@string/share"
            android:textAllCaps="false"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_description_separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constrainedWidth="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>