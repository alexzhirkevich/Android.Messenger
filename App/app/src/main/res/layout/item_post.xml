<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_back"
    android:paddingHorizontal="@dimen/post_padding_horizontal">

    <com.community.features.avatarimageview.AvatarImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/post_avatar"
        android:src="@drawable/logo256"
        android:layout_width="40dp"
        android:padding="1dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/post_name"
        android:layout_toStartOf="@id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/post_avatar"
        app:layout_constraintStart_toEndOf="@id/post_avatar"
        app:layout_constraintEnd_toStartOf="@id/post_views"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        android:ellipsize="end"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_medium"
        tools:text="Channel Name"/>


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/post_layout_mediacontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_name"
        android:layout_marginTop="3dp"
        app:alignContent="flex_start"
        app:alignItems="stretch"
        app:flexDirection="row_reverse"
        app:flexWrap="wrap"
        app:justifyContent="flex_end"
        android:background="@color/app_back">

    </com.google.android.flexbox.FlexboxLayout>

    <com.community.messenger.app.ui.views.AutoLinkTextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/post_layout_mediacontent"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_medium"
        tools:text="@tools:sample/lorem/random"
        app:emojiSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/post_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/post_name"
        tools:text="14:23" />

    <TextView
        android:id="@+id/post_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_small"
        android:layout_marginEnd="10dp"
        app:drawableStartCompat="@drawable/ic_eye"
        app:drawableTint="@color/gray"
        android:drawablePadding="1dp"
        app:layout_constraintEnd_toStartOf="@id/post_shares"
        app:layout_constraintTop_toTopOf="@id/post_name"
        app:layout_constraintBottom_toBottomOf="@id/post_name"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1"
        tools:text="124 231"
         />

    <TextView
        android:id="@+id/post_shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_small"
        android:layout_marginEnd="10dp"
        app:drawableStartCompat="@drawable/ic_reply"
        app:drawableTint="@color/gray"
        android:drawablePadding="1dp"
        app:layout_constraintEnd_toStartOf="@id/post_date"
        app:layout_constraintTop_toTopOf="@id/post_name"
        app:layout_constraintBottom_toBottomOf="@id/post_name"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1"
        tools:text="123" />



</androidx.constraintlayout.widget.ConstraintLayout>
