<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/app_back"
    android:padding="15dp">

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_question"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:tint="@color/gray"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dialog_icon"
        android:layout_alignBottom="@id/dialog_icon"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/dialog_icon"
        android:ellipsize="end"
        android:fontFamily="@font/gotham_pro_bold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_large"
        tools:text="Title"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/dialog_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@id/dialog_message"
        android:layout_below="@id/dialog_icon"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="3dp"
        android:background="@color/gray" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_big"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/white"
        android:paddingHorizontal="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dialog_separator"
        tools:text="Message"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/dialog_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dialog_message"
        android:layout_below="@id/dialog_message"
        android:textColor="@color/white"
        app:buttonTint="@color/gray"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Dont ask again">
    </com.google.android.material.checkbox.MaterialCheckBox>
</RelativeLayout>