<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_back"
    android:padding="15dp">

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_exit"
        android:tint="@color/gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/gray"
        android:fontFamily="@font/gotham_pro_bold"
        android:layout_toEndOf="@id/dialog_icon"
        android:layout_alignTop="@id/dialog_icon"
        android:layout_alignBottom="@id/dialog_icon"
        android:gravity="center_vertical"
        android:text="@string/signout" />

    <View
        android:id="@+id/dialog_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignEnd="@id/dialog_message"
        android:layout_below="@id/dialog_icon"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="3dp"
        android:background="@color/white"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/font_size_big"
        android:text="@string/are_you_sure"
        android:paddingHorizontal="3dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/dialog_separator"/>
</RelativeLayout>