<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="icon">@drawable/ic_menu</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/ripple_transparent</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">@dimen/default_control_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">16sp</item>
        <item name="iconPadding">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/gotham_pro_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChatsChannelsTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gotham_pro_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProfileTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ProfileDescriptionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:maxLines">4</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SmallFab" parent="Widget.MaterialComponents.FloatingActionButton"
        />

    <style name="SmallFab_Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:elevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/background_fab_text</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.TextAppearance">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:fontFamily">@font/gotham_pro</item>
    </style>
    <style name="Widget.Design.BottomNavigationView.TextAppearance.Active">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:fontFamily">@font/gotham_pro_light</item>
    </style>

</resources>