<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="icon">@drawable/ic_menu</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/ripple_transparent</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">16sp</item>
        <item name="iconPadding">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/gotham_pro_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChatsChannelsTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gotham_pro_bold</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>